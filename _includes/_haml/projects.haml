  .cards
    {% for project in site.data.projects %}
    .card
      .ribbon-wrapper
        .ribbon
          {{project.language}}
      .card-header
        {{project.title}}
      .card-copy
        %p {{project.description}}
      .card-stats
        %ul
          {% for technology in project.technologies %}
          %li
            {{technology}}
          {% endfor %}
      .card-link
        %a.octicon.octicon-octoface(href="{{project.github}}")
          GitHub
        {% if project.url %}
        %a.octicon.octicon-globe(href="{{project.url}}")
          Preview
        {% endif %}
      .card-year
        .badges
          .badge.year
            {{project.year}}
    {% endfor %}
